<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
     <package name="struts2" extends="struts-default">
		<action name="findHomeItems" class="itemAction" method="getiItemAction">
			<result name="suc">index.jsp</result>
		</action>
	</package>
	<package name="struts4" extends="struts-default">
		<action name="findItems" class="itemAction" method="findItemsAction">
			<result name="items">WEB-INF/pages/items.jsp</result>
			<result name="itemNull">WEB-INF/pages/tbItemNull.jsp</result>
		</action>
		
		<action name="findBestItems" class="itemAction" method="findBestItems">
			<result name="bestItems">WEB-INF/pages/bestItems.jsp</result>
			<result name="itemNull">WEB-INF/pages/tbItemNull.jsp</result>
		</action>
		
		  <action name="findGoodsUrl" class="com.chinarewards.framework.taobao.item.action.goodsAction" method="findGoodsUrl">
            <result name="success">WEB-INF/pages/goodsDetail.jsp</result>
        </action>
        
         <action name="goodsNull" class="com.chinarewards.framework.taobao.item.action.goodsAction" method="goodsNull">
			<result name="goodsNull">WEB-INF/pages/tbItemNull.jsp</result>
        </action>
        
        <action name="findItemTaobaoUrl" class="itemAction" method="findItemTaobaoUrl">
        	<result name="login" type="redirectAction" >loginPage.action?urlType=1</result>
			<result name="success" type="redirect">${taobaoUrl}</result>
        </action>
	</package>
	
	<package name="findDetail" extends="json-default">
		<action name="findTaobaoDetail" class="com.chinarewards.framework.taobao.item.action.goodsAction" method="findTaobaoDetail">
			<result name="success" type="json">
			   <param name="root">message</param>
			</result>
		</action>
	</package>
	
	
</struts>